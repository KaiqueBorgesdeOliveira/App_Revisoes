{
  "name": "sistema-revisao-salas-uol",
  "version": "1.0.0",
  "description": "Sistema de Revis√£o de Salas - UOL",
  "author": "UOL",
  "main": "main.js",
  "scripts": {
    "build-portable": "electron-builder build --win portable --x64"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.uol.revisao-salas",
    "productName": "Sistema Revisao Salas UOL",
    "electronVersion": "27.0.0",
    "directories": {
      "output": "dist"
    },
    "files": [
      "public/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": [
        { "target": "portable", "arch": ["x64"] }
      ],
      "artifactName": "${productName}-${version}-Portable.${ext}"
    }
  }
}
